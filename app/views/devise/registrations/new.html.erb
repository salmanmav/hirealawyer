<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', id: 'client_sign_up'}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <div id="legend">
            <legend class="">Signup page for <%=resource.try(:class).try(:to_s) %></legend>
          </div>
       
          <div class="control-group">
            <label class="control-label" for="email">E-mail</label>
            <div class="controls">
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: ""  %>
              <p class="help-block">Please provide your E-mail</p>
            </div>
          </div>
       
          <div class="control-group">
            <label class="control-label" for="password">Password</label>
            <div class="controls">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: "" %>
              <p class="help-block">Password should be at least 6 characters</p>
            </div>
          </div>
       
          <div class="control-group">
            <label class="control-label" for="password_confirm">Password (Confirm)</label>
            <div class="controls">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', placeholder: "" %>
              <p class="help-block">Please confirm password</p>
            </div>
          </div>
       
          <div class="control-group">
            <!-- Button -->
            <div class="controls">
              <%= f.submit "Sign up",class: 'btn btn-success' %>
            </div>
          </div>

        </fieldset>
      <%end%>
      <%= render "devise/shared/links" %>

    </div> 
  </div>
</div>