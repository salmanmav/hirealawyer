<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal', id: 'client_sign_in'}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <div id="legend">
            <legend class="">Log In</legend>
          </div>
       
          <div class="control-group">
            <label class="control-label" for="email">E-mail</label>
            <div class="controls">
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: ""  %>
              <!-- <p class="help-block">Enter E-mail</p> -->
            </div>
          </div>
       
          <div class="control-group">
            <label class="control-label" for="password">Password</label>
            <div class="controls">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: "" %>
              <p class="help-block">Enter your password</p>
            </div>
          </div>
       
          <div class="control-group">
            <!-- Button -->
            <div class="controls">
              <%= f.submit "Login",class: 'btn btn-success' %>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="controls">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </fieldset>
      <%end%>
      <%= render "devise/shared/links" %>

    </div> 
  </div>
</div>
